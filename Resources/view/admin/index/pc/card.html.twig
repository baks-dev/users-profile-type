<tr class="vertical-middle">

	<td class="text-nowrap">
		{# Пользовательское меню #}
		{{ include(_self|replace({ "card.html.twig": "_usecase.html.twig" })) }}
	</td>
	
	<td class="text-center">
		{{ item.sort }}
	</td>
	
	<td class="w-100">
		
		{% if is_granted(ROLE~'_EDIT') or is_granted('ROLE_ADMIN') %}
			{# Название #}
			<a href="{{ path('users-profile-type:admin.newedit.edit', {id: item.event }) }}"
					class="mb-1"
			>{{ item.name }}</a>
		{% else %}
			{{ item.name }}
		{% endif %}
		
		{# Описание #}
		<div class="text-muted small">
			{{ string_width(item.description, 150)|raw }}
		</div>
	
	</td>

	<td class="text-center">

		{% if item.public %}
			<svg xmlns="http://www.w3.org/2000/svg"
				 width="16"
				 height="16"
				 fill="currentColor"
				 class="text-success"
				 viewBox="0 0 16 16">
				<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
			</svg>
		{% endif %}

	</td>

	<td class="text-center">

		{% if item.usr %}
			<svg xmlns="http://www.w3.org/2000/svg"
				 width="16"
				 height="16"
				 fill="currentColor"
				 class="text-success"
				 viewBox="0 0 16 16">
				<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
			</svg>
		{% endif %}

	</td>
</tr>